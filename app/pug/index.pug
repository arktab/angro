                                //use(xlink:"")
                    .contacts
                        h5 Наши офисы
                        a(href="mailto:angrobud@gmail.com").link.link--footer  angrobud@gmail.com
                        a(href="tel=+380509915883").link.link--footer +38(050) 991-58-83
                        a(href="tel=+380509915883").link.link--footer +38(050) 991-58-82
                    .newsletter
                         form(action="")
                            fieldset
                                legend Будьте в курсе спецпредложений
                            .text-wrap
                                label( for="newsletter") Ваш e-mail
                                    input#newsletter(type="text")
