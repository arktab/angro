        section#about.about
            include layout/section-about.pug
        section#objects.objects
            include layout/section-objects.pug
        section#articles.articles
            include layout/section-articles.pug
        section#apartments.apartments
            include layout/section-apartments.pug
        section#info.contact
            include layout/section-contact.pug
        footer
            .container
                .footer-content.grid
                    .address
                        h5 Наши офисы
